<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Hello War</display-name>

   <listener>
      <listener-class>com.claymccoy.DefaultHttpSessionListener</listener-class>
   </listener>
  
  <servlet>
    <servlet-name>HelloWarServlet</servlet-name>
    <servlet-class>com.claymccoy.HelloWarServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>HelloWarServlet</servlet-name>
    <url-pattern>/HelloWarServlet</url-pattern>
  </servlet-mapping>


  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>


</web-app>
